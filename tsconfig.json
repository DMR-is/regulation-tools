{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["dom", "esnext", "dom.iterable"],
    "incremental": true,
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
  },
  "exclude": ["dist", "src/__test__", "tsconfig.tsbuildinfo", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.ts", "**/*.tsx"]
}
